<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_avatar" />

        <TextView
            android:id="@+id/item_nameComment"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Tên người bình luân"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/item_editComment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/icon_edit" />

        <ImageView
            android:id="@+id/item_deleteComment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/icon_delete" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_contentComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="truyên rất hay"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/item_dateComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="5dp"
        android:text="21-11-2024"
        android:textColor="#777777" />

</LinearLayout>