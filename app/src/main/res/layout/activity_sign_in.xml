<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#99FFCC"
    tools:context=".SignIn">
    <LinearLayout
        android:background="@drawable/vien_tron"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:src="@drawable/signin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ĐĂNG NHẬP"
            android:textSize="40sp"
            android:textStyle="bold" />

        <EditText
            android:paddingStart="10dp"
            android:id="@+id/edt_namedn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Tên người dùng"
            android:inputType="text" />

        <EditText
            android:paddingStart="10dp"
            android:id="@+id/edt_passworddn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Mật khẩu"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_dn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:onClick="onSignInClick"
            android:text="Đăng nhập"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="Nếu chưa có tài khoản "
            />

        <TextView
            android:id="@+id/tv_dktk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Đăng ký tại đây !"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/holo_red_light" />
    </LinearLayout>



</LinearLayout>
